    <SolidColorBrush x:Key="BrushVeryDarkGray" Color="#202224"/>
    <Color x:Key="ColorVeryDarkGray">#202224</Color>
    
    <SolidColorBrush x:Key="BrushDarkGray" Color="#222426"/>
    <Color x:Key="ColorDarkGray">#222426</Color>

    <SolidColorBrush x:Key="BrushMediumGray2" Color="#363a3d"/>
