    <!-- WindowIcon -->
    <!-- This Icons get "Stroke" value from buttons value "Foreground" -->
    <!--
    For path needs exactly specify value in the sizes properties! Sizes necessary exactly specify, how in a illustrator!
    And change stroke to fill.
    If not specify this. Elements will be blurred!
    -->
    <Style  x:Key="MinimizeIcon" TargetType="{x:Type Label}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Grid Margin="0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Width="10"
                            Height="1"
                            StrokeThickness="1"
                            Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                            Stretch="Fill"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"
                            Data="M0,6h10">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0" Y="3"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  x:Key="MaximizeIconRestored" TargetType="{x:Type Label}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Grid Margin="0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path x:Name="MaximizeIconRestored"
                            Width="8"
                            Height="8"
                            StrokeThickness="1"
                            Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                            Stretch="Fill"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"
                            Data="M9,9H1V1h8V9z">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0" Y="1"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  x:Key="MaximizeIconNormal" TargetType="{x:Type Label}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Grid Margin="0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path x:Name="MaximizeIconNormal"
                            Width="10"
                            Height="10.2"
                            StrokeThickness="1"
                            Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                            Stretch="Fill"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"
                            Data="M2.2,1.3v-1.9H10v8.5H8.3 M8.3,1.3H2.2H0v8.3h8.3V1.3z">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  x:Key="CloseIcon" TargetType="{x:Type Label}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path StrokeThickness="1"
                            Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                            Stretch="None"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"
                            Data="M0,10L10,0.1 M0,0l10,10">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CommonIcon -->

    <!--
    For sizing icons, using next scheme: ViewBox(Change sizes of image) - Control with template get image - ControlTemplate -
    Canvas(With hard set sizes) - Path(With hard set sizes)
    -->
    <ControlTemplate x:Key="Arrow">
        <Canvas Width="19" Height="8">
            <Path Width="19"
                  Height="8"
                  StrokeThickness="3"
                  Stroke="{Binding RelativeSource={RelativeSource AncestorType=Control}, Path=Foreground}"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  StrokeDashCap="Round"
                  Stretch="Fill"
                  UseLayoutRounding="True"
                  SnapsToDevicePixels="True"
                  Data="M19.5,0.5l-9.5,8l-9.5-8">
                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </Canvas>
    </ControlTemplate>

</ResourceDictionary>